<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:orientation="vertical"
    tools:context=".ui.user.fragment.BookingFragment">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvtitle"
            style="@style/fontBold"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:text="@string/my_bookings"
            android:textColor="@color/black"
            android:textSize="@dimen/header_font_size" />

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@+id/imgNotification"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_calender"
            app:tint="@color/grey_dark" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_notification"
            app:tint="@color/grey_dark" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvtitle"
            android:visibility="gone" />

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/astrologer_blue_theme"
        app:tabSelectedTextColor="@color/astrologer_blue_theme"
        app:tabTextColor="@color/unselected_tab_text_color" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_60sdp"
        />

</LinearLayout>