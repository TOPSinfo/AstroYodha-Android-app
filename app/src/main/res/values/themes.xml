<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AstrologyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/user_theme</item>
        <item name="colorPrimaryVariant">@color/user_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/user_theme</item>
        <item name="colorSecondaryVariant">@color/user_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColor">@color/user_theme</item>
        <item name="colorAccent">@color/user_theme</item>
    </style>

    <style name="Theme.AstrologyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AstrologyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="elevation">0dp</item><!--this will remove bottom shadow from AppBarLayout-->
    </style>

    <style name="Theme.AstrologyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Font Styles-->
    <style name="fontSemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="fontExtraBold">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="fontBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="fontRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fontMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="FilePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/user_theme</item>
        <item name="colorPrimaryDark">@color/user_theme</item>
        <item name="colorAccent">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>

    </style>

    <style name="FilePickerThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/astrologer_theme</item>
        <item name="colorPrimaryDark">@color/astrologer_theme</item>
        <item name="colorAccent">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>

    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/astrologer_theme</item>
        <item name="colorPrimaryDark">@color/astrologer_theme</item>
        <item name="colorAccent">@color/astrologer_theme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonPositeveButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/astrologer_theme</item>
    </style>

    <style name="DatePickerTheme.ButtonPositeveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/astrologer_theme</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="CutShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance</item>
    </style>

    <style name="CutShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

</resources>